{
  "name": "etesian-express-boilerplate",
  "version": "1.0.0",
  "description": "Typescript/Express Boilerplate",
  "author": "Velid Aljic <velid.aljic@protonmail.com>",
  "license": "ISC",
  "scripts": {
    "start": "cross-env NODE_ENV=development node dist/index.js",
    "serve": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \",cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "build": "npm run build-ts",
    "postinstall": "npm run build",
    "postbuild": "ef-tspm",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon -r tsconfig-paths/register -r ts-node/register dist/index.js",
    "format": "prettier 'src/**/*.ts' --write",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docs": "apidoc -i src -o docs",
    "postdocs": "opn docs/index.html"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "git add ."
    ]
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^9.1.2",
    "@ef-carbon/tspm": "^2.2.5",
    "@types/bcrypt": "^3.0.0",
    "@types/bluebird": "^3.5.32",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.7",
    "@types/crypto-js": "^3.1.47",
    "@types/dotenv-safe": "^8.1.1",
    "@types/express": "^4.17.1",
    "@types/express-validator": "^3.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.162",
    "@types/method-override": "0.0.31",
    "@types/moment-timezone": "^0.5.30",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.6.4",
    "@types/passport": "^1.0.4",
    "@types/passport-jwt": "^3.0.3",
    "@types/shelljs": "^0.8.8",
    "apidoc": "^0.20.1",
    "commitlint": "^9.1.2",
    "concurrently": "^5.3.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.0",
    "nodemon": "^2.0.4",
    "opn-cli": "^3.1.0",
    "prettier": "^2.1.1",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "catch-decorator-ts": "0.0.2",
    "class-validator": "^0.12.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.6.1",
    "helmet": "^4.1.0",
    "http-status": "^1.4.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "method-override": "^3.0.0",
    "moment-timezone": "^0.5.31",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.3.3",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.0.1",
    "typeorm": "^0.2.25",
    "winston": "^3.3.3"
  }
}
