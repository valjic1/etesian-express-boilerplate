{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts"
    ]
  },
  "jsRules": {},
  "rules": {
    "no-console": false,
    "no-debugger": false,
    "ordered-imports": [
      true,
      {
        "module-source-path": "full",
        "grouped-imports": true,
        "groups": [
          {
            "name": "[1] relative dir",
            "match": "^[.](?![.]).",
            "order": 8
          },
          {
            "name": "[2] relative dir",
            "match": "^[.][.]",
            "order": 7
          },
          {
            "name": "Shared",
            "match": "^@shared.*",
            "order": 6
          },
          {
            "name": "Models",
            "match": "^@models.*",
            "order": 5
          },
          {
            "name": "Libs",
            "match": "^@libs.*",
            "order": 4
          },
          {
            "name": "Config",
            "match": "^@config.*",
            "order": 3
          },
          {
            "name": "API",
            "match": "^@api.*",
            "order": 2
          },
          {
            "name": "node_modules",
            "match": ".*",
            "order": 1
          }
        ]
      }
    ]
  },
  "rulesDirectory": []
}
